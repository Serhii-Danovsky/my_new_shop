
<div class="col-md-6">
  <h1>В корзинке:</h1>
  <table class="table">
    <% @line_items.each_with_index do |line_item, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= image_tag(line_item.product.image.url(:small)) %></td>
          <td><%= link_to line_item.product.title, product_path(line_item.product) %></td>
          <td><%= line_item.quantity %></td>
          <td class="product-price"><%= number_to_currency(line_item.product.price * line_item.quantity) %></td>
          <td class="btn-danger btn"><%= link_to('DELETE', line_item_path(id: line_item.id), method: :delete) %></td>
        </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td class="product-price"><%= total_price(@line_items) %></td>
    </tr>
  </table>
</div>
<div class="col-md-6">
  <h1> <%= link_to 'Оформить покупку', new_order_path ,  :class => "btn-danger" %></h1>
</div>
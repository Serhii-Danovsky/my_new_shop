<h1>Products#index</h1>


<% @products.each do |product| %>

    <div class="main">
      <div class="view view-sixth col-lg-4 col-md-4 col-sm-4">
        <a href="#" class="info"><%= product.title %></a>
        <%= link_to product do %>
            <%= image_tag product.image, style: 'width: 300px; height: 300px' if product.image? %>
        <% end %>
        <div class="mask">
          <h2><%= product.price %></h2>
          <p><%= product.description %></p>
          <div class="info"><h2><%= link_to 'Go', product %></h2</div>
        </div>

      </div>
    </div>


<% end %>